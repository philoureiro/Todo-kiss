<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="486.0" prefWidth="584.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.DeleteCategoryController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Remover categoria">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets left="10.0" top="20.0" />
         </VBox.margin>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="A categoria só poderá ser removida, caso não haja nenhuma tarefa associada à ela.">
         <VBox.margin>
            <Insets left="15.0" />
         </VBox.margin>
      </Text>
      <ChoiceBox fx:id="choiceCategory" prefHeight="25.0" prefWidth="262.0">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ChoiceBox>
      <Button mnemonicParsing="false" onAction="#onConfirmButtonClicked" prefHeight="25.0" prefWidth="174.0" style="-fx-background-color: yellow;" text="Confirmar">
         <VBox.margin>
            <Insets left="10.0" top="200.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
